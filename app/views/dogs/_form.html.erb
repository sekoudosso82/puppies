<%= link_to "CANCEL!!!", dogs_path %>

<% if flash[:errors] %>
    <% flash[:errors].each do |e| %>
        <%= e %>
    <% end %>
<% end %>

<%= form_for @dog do |f| %>
    <%= f.label :dog_image, "dog cover image" %>
    <%= f.file_field :dog_image %> <br>

    <%= f.label :name %>
    <%= f.text_field :name %> <br>

    <%= f.label :age %>
    <%= f.text_field :age %> <br> 

    <%= f.label :color %>
    <%= f.text_field :color %> <br> 

    <%= f.label :weight %>
    <%= f.text_field :weight %> <br>

    <%= f.label :owner_id %>
    <%= f.collection_select :owner_id, @owners, :id, :first_name %>

    <%= f.submit %>
<% end %>